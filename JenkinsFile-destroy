pipeline {
    agent any

    tools {
        terraform 'terraform'
    }

    stages {
        stage('Checkout') {
                    steps {
                        checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/sanketsultan/open-office.git']]])
                    }
        }

        stage('Terraform Init') {
            steps {
                sh label: '', script: 'terraform init'
            }
        }
        stage('Terraform Plan') {
            steps {
                sh label: '', script: 'terraform plan'
            }
        }
        stage('Terraform destroy') {
            steps {
                echo 'Terraform action from the parameter is ---> destory'
                sh label: '', script: 'terraform destory --auto-approve'
            }
        }
    }
}
